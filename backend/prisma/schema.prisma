generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// prisma/schema.prisma
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  password      String
  refreshToken  String?
  createdAt     DateTime @default(now())

  tasks Task[]
  categories Category[]

  @@map("users")
}

model Category {
  id     String @id @default(cuid())
  name   String @unique @db.VarChar(50)
  color  String // hex color, e.g. "#f59e0b"
  userId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks  Task[]

  @@unique([userId, name])
  @@map("categories")
}

model Task {
  id          String   @id @default(cuid())
  title       String   @db.VarChar(255)
  description String?
  status      TaskStatus @default(PENDING)
  priority    Priority @default(LOW)
  dueDate     DateTime?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories Category[]

  @@map("tasks")
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
